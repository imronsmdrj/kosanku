<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/daftar_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="150dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/daftar_judul"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/daftar_icon"
            android:text="Hello My Friend"
            android:textColor="#000000"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/daftar_deskripsi"
            android:layout_below="@id/daftar_judul"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/daftar_icon"
            android:text="We Hope The Place Yor Choose Will Be Comfortable To Be Leaded"
            android:textColor="#000000"
            android:ellipsize="end"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>